<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>gwc</servlet-name>
        <servlet-class>galacticWarlord.server.GWControlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>galacticWarlord.server.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GalacticEntityJSONServlet</servlet-name>
        <servlet-class>galacticWarlord.server.GalacticEntityJSONServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScannerJSONServlet</servlet-name>
        <servlet-class>galacticWarlord.server.ScannerJSONServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>gwc</servlet-name>
        <url-pattern>/gwc</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file> index.html </welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GalacticEntityJSONServlet</servlet-name>
        <url-pattern>/GalacticEntityJSONServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScannerJSONServlet</servlet-name>
        <url-pattern>/ScannerJSONServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
